{
  "name": "@kkolk/scamp-wiki",
  "description": "Static wiki written with Markdown using Nextra and Next.js.",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kkolk/scamp-wiki.git"
  },
  "author": "Kevin Kolk",
  "license": "MIT",
  "scripts": {
    "build": "next build",
    "dev": "next",
    "postinstall": "patch-package",
    "prepare": "husky install",
    "start": "next start --port ${PORT-3000}"
  },
  "lint-staged": {
    "{pages}/**/*.ts": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@mdx-js/loader": "2.0.0-next.8",
    "next": "^10.1.3",
    "nextra": "0.4.1",
    "nextra-theme-docs": "1.1.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@types/node": "^14.14.41",
    "@types/react": "^17.0.3",
    "@types/ws": "^7.4.1",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "patch-package": "^6.4.7",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
